[Unit]
Description=BackupPC server
After=syslog.target local-fs.target

[Service]
Type=simple
User=backuppc
#Group=backuppc
ExecStart=/usr/local/backuppc/bin/BackupPC
RuntimeDirectory=BackupPC
PIDFile=/var/run/BackupPC/BackupPC.pid
KillSignal=SIGTERM
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
